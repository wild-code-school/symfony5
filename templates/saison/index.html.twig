{% extends 'base.html.twig' %}

{% block title %}Saison index{% endblock %}

{% block body %}
    <h1>Saison index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Annee</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for saison in saisons %}
            <tr>
                <td>{{ saison.id }}</td>
                <td>{{ saison.nombre }}</td>
                <td>{{ saison.annee }}</td>
                <td>{{ saison.description }}</td>
                <td>
                    <a href="{{ path('app_saison_show', {'id': saison.id}) }}">show</a>
                    <a href="{{ path('app_saison_edit', {'id': saison.id}) }}">edit</a>
