{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}

    <div class="container w-100 p-3 bg-light">

        <div class="media">
            <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.synopsis }}</p>
                <p>{{ program.id }}</p>

                {% for saison in program.saisons %}
                    <a href="{{ path("program_season_show", { "program_id": program.id, "season_id": saison.id}) }}">
                        Voir la saison {{ saison.nombre }}</a>
                {% endfor %}

                <p>Catégorie : {{ program.category.name }}</p>
            </div>
        </div>

        <a href="{{ path('program_index') }}"> Retour à la liste des programmes </a>
    </div>
{% endblock %}
